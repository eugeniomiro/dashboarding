                    <GradientStop x:Name="_highDisabled0" Color="#FFB5B5B5" Offset="1"/>
                </LinearGradientBrush>
            </Path.Fill>

            <Path.Clip>
                <PathGeometry>
                    <PathFigure x:Name="pf" IsClosed="True" StartPoint="0,0">
                        <LineSegment x:Name="seg1" Point="0,0"/>
                        <LineSegment x:Name="seg2" Point="100,0"/>
